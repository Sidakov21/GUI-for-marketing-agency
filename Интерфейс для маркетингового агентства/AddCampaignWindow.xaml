<Window x:Class="Интерфейс_для_маркетингового_агентства.AddCampaignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_для_маркетингового_агентства"
        mc:Ignorable="d"
        Title="AddCampaignWindow" Height="350" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Поле для названия -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10" Height="25"/>

        <!-- Поле для даты начала -->
        <Label Grid.Row="1" Grid.Column="0" Content="Start_date:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <DatePicker x:Name="StartDatePicker" Grid.Row="1" Grid.Column="1" Margin="0 0 0 10" Height="25"/>

        <!-- Поле для даты завершения -->
        <Label Grid.Row="2" Grid.Column="0" Content="End_date:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <DatePicker x:Name="EndDatePicker" Grid.Row="2" Grid.Column="1" Margin="0 0 0 10" Height="25"/>

        <!-- Поле для бюджета -->
        <Label Grid.Row="3" Grid.Column="0" Content="Budget:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <TextBox x:Name="BudgetTextBox" Grid.Row="3" Grid.Column="1" Margin="0 0 0 10" Height="25"/>

        <!-- Поле для статуса -->
        <Label Grid.Row="4" Grid.Column="0" Content="Status:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="4" Grid.Column="1" Margin="0 0 0 10" Height="25">
            <ComboBoxItem Content="Активна"/>
            <ComboBoxItem Content="Завершена"/>
            <ComboBoxItem Content="Приостановлена"/>
        </ComboBox>

        <!-- Поле для client_id -->
        <Label Grid.Row="5" Grid.Column="0" Content="Client_id:" VerticalAlignment="Center" Margin="0 0 10 0"/>
        <TextBox x:Name="ClientIdTextBox" Grid.Row="5" Grid.Column="1" Margin="0 0 0 10" Height="25"/>

        <!-- Кнопка для добавления -->
        <!--<Button x:Name="AddButton" Grid.Row="7" Grid.Column="1" Content="Добавить" Width="100" HorizontalAlignment="Right" Margin="0 10 0 0" Height="30" Click="AddButton_Click"/>-->

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Margin="0 10 10 0" Click="CancelButton_Click"/>
            <Button x:Name="AddButton" Content="Добавить" Width="100" Margin="0 10 10 0" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
