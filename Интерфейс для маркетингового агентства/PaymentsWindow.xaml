<Window x:Class="Интерфейс_для_маркетингового_агентства.PaymentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_для_маркетингового_агентства"
        mc:Ignorable="d"
        Title="PaymentsWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок таблицы -->
        <TextBlock Grid.Row="0" Text="Таблица платежей (Payments)" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- DataGrid для отображения списка платежей -->
        <DataGrid x:Name="PaymentsDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False" 
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0 0 0 10"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="payment_id" Binding="{Binding payment_id}" Width="Auto"/>
                <DataGridTextColumn Header="amount" Binding="{Binding amount, StringFormat=N2}" Width="Auto"/>
                <DataGridTextColumn Header="payment_data" Binding="{Binding payment_data, StringFormat=dd.MM.yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="payment_type" Binding="{Binding payment_type}" Width="*"/>
                <DataGridTextColumn Header="campaign_id" Binding="{Binding campaign_id}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button x:Name="AddPaymentButton" Content="Добавить" Width="100" Margin="0 0 10 0" Click="AddPaymentButton_Click" FontSize="15"/>
            <Button x:Name="EditPaymentButton" Content="Редактировать" Width="120" Margin="0 0 10 0" Click="EditPaymentButton_Click" FontSize="15"/>
            <Button x:Name="DeletePaymentButton" Content="Удалить" Width="100" Click="DeletePaymentButton_Click" FontSize="15"/>
            <Button x:Name="BackButton" Content="Назад" Width="80" Margin="10 0 10 0" Click="BackButton_Click" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
