<Window x:Class="Интерфейс_для_маркетингового_агентства.VendorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс_для_маркетингового_агентства"
        mc:Ignorable="d"
        Title="VendorsWindow" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок таблицы -->
        <TextBlock Grid.Row="0" Text="Таблица поставщиков (Vendors)" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,15" HorizontalAlignment="Center"/>

        <!-- DataGrid для отображения списка поставщиков -->
        <DataGrid x:Name="VendorsDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False" 
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="0 0 0 10"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vendor_id" Binding="{Binding vendor_id}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Service_type" Binding="{Binding service_type}" Width="*"/>
                <DataGridTextColumn Header="Contact_info" Binding="{Binding contact_info}" Width="*"/>
                <DataGridTextColumn Header="contract_terms" Binding="{Binding contract_terms}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button x:Name="AddVendorButton" Content="Добавить" Width="100" Margin="0 0 10 0" Click="AddVendorButton_Click" FontSize="15"/>
            <Button x:Name="EditVendorButton" Content="Редактировать" Width="120" Margin="0 0 10 0" Click="EditVendorButton_Click" FontSize="15"/>
            <Button x:Name="DeleteVendorButton" Content="Удалить" Width="100" Click="DeleteVendorButton_Click" FontSize="15"/>
            <Button x:Name="BackButton" Content="Назад" Width="80" Margin="10 0 10 0" Click="BackButton_Click" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
